<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragments.AccountFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:id="@+id/relativeloading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        >

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminateTint="@color/blue2"
            android:scaleX="0.8"
            android:scaleY="0.8"
            />


    </RelativeLayout>


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:id="@+id/relative2">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/transperent_textview"
        android:fontFamily="@font/inter_medium"
        android:gravity="center"
        android:text="Hey!"
        android:textSize="12sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/transperent_textview"
        android:fontFamily="@font/inter_medium"
        android:gravity="center"
        android:text="8550952160!"
        android:textColor="@color/black"
        android:textSize="16sp" />



    <LinearLayout
        android:id="@+id/linear6"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@id/textView2"
        android:background="@drawable/border1"
        android:orientation="horizontal" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/linear6"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:id="@id/linear7">

        <TextView
            android:id="@+id/btn_myOrders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/button_bg_4"
            android:drawableStart="@drawable/bocsvg"
            android:drawablePadding="15dp"
            android:fontFamily="@font/inter_medium"
            android:gravity="center_vertical"
            android:minHeight="40dp"
            android:paddingStart="15dp"
            android:paddingEnd="10dp"
            android:text="Orders"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/btn_mycart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_weight="0.5"
            android:background="@drawable/button_bg_4"
            android:fontFamily="@font/inter_medium"
            android:gravity="center_vertical"
            android:minHeight="40dp"
            android:drawableStart="@drawable/shoppoingcart1"
            android:drawablePadding="15dp"
            android:paddingStart="15dp"
            android:paddingEnd="10dp"
            android:text="My cart"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/linear7"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:id="@id/linear9">

        <TextView
            android:id="@+id/btn_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/button_bg_4"
            android:drawableStart="@drawable/address_location_map_svgrepo_com"
            android:drawablePadding="15dp"
            android:fontFamily="@font/inter_medium"
            android:gravity="center_vertical"
            android:minHeight="40dp"
            android:paddingStart="15dp"
            android:inputType="text"
            android:paddingEnd="10dp"
            android:text="My Addresses"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/btn_Wallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_weight="0.5"
            android:background="@drawable/button_bg_4"
            android:fontFamily="@font/inter_medium"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/shop"
            android:drawablePadding="15dp"
            android:minHeight="40dp"
            android:paddingStart="15dp"
            android:paddingEnd="10dp"
            android:text="Wallet"
            android:textColor="@color/black" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear10"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@id/linear9"
        android:background="@drawable/border1"
        android:orientation="horizontal" />


    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear10"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/transperent_textview"
        android:fontFamily="@font/inter_medium"
        android:gravity="center"
        android:text="Recently viewed"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyckler"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/textView6"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp" />

    <TextView
        android:id="@id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recyckler"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/inter_medium"
        android:text="More"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@id/textView19"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView18"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:drawablePadding="15dp"
        android:drawableStart="@drawable/support_svgrepo_com"
        android:fontFamily="@font/inter_regular"
        android:text="Customer support"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@id/textView20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView19"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:drawablePadding="15dp"
        android:drawableStart="@drawable/feedback_svgrepo_com"
        android:fontFamily="@font/inter_regular"
        android:text="Feedback"
        android:textColor="@color/black"
        />


</RelativeLayout>

</RelativeLayout>