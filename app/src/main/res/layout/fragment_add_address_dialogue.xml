<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragments.AddAddressDialogueFragment">

    <!-- TODO: Update blank fragment layout -->


    <ImageView
        android:id="@+id/textHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:paddingStart="3dp"
        android:paddingTop="3dp"
        android:paddingEnd="3dp"
        android:paddingBottom="3dp"
        android:src="@drawable/delete" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/textHeader"
        android:fontFamily="@font/inter_medium"
        android:paddingStart="3dp"
        android:paddingTop="3dp"
        android:paddingEnd="3dp"
        android:paddingBottom="3dp"
        android:text="Add address"
        android:textColor="@color/black"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/textHeader"
        android:fontFamily="@font/inter_light"
        android:text="Name"
        android:textColor="@color/Orange_black"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/textView15"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/text_background"
        android:drawablePadding="2dp"
        android:fontFamily="@font/inter_regular"
        android:inputType="textNoSuggestions|text"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/black"
        android:textColorHighlight="#013ADF"
        android:textColorLink="#1976D2"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etName"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/inter_light"
        android:text="Mobile Number"
        android:textColor="@color/Orange_black"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/etMobileNumber"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/textView4"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/text_background"
        android:drawablePadding="2dp"
        android:fontFamily="@font/inter_regular"
        android:inputType="textNoSuggestions|text"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/black"
        android:textColorHighlight="#013ADF"
        android:textColorLink="#1976D2"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/btn_myLocation"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@+id/textView14"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_toRightOf="@+id/etPincode"
        android:background="@drawable/text_background"
        android:drawableStart="@drawable/location_symbol"
        android:drawablePadding="5dp"
        android:fontFamily="@font/inter_regular"
        android:gravity="center"
        android:inputType="text"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="Use my location"
        android:textColor="@color/Project_blue"
        android:textColorHighlight="#013ADF"
        android:textColorLink="#1976D2"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etMobileNumber"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/inter_light"
        android:text="Pincode"
        android:textColor="@color/Orange_black"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/etPincode"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_below="@+id/textView14"
        android:layout_marginStart="20dp"
        android:background="@drawable/text_background"
        android:fontFamily="@font/inter_regular"
        android:gravity="fill"
        android:inputType="textNoSuggestions|text"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/black"
        android:textColorHighlight="#013ADF"
        android:textColorLink="#1976D2"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_below="@id/etPincode"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="0.5"
            android:fontFamily="@font/inter_light"
            android:text="State"
            android:textColor="@color/Orange_black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.5"
            android:fontFamily="@font/inter_light"
            android:text="City"
            android:textColor="@color/Orange_black"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/linear1"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etState"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView14"
            android:layout_weight="0.5"
            android:background="@drawable/text_background"
            android:fontFamily="@font/inter_regular"
            android:gravity="fill"
            android:inputType="textNoSuggestions|text"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/black"
            android:textColorHighlight="#013ADF"
            android:textColorLink="#1976D2"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/etCity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView14"
            android:layout_marginStart="10dp"
            android:layout_weight="0.5"
            android:background="@drawable/text_background"
            android:fontFamily="@font/inter_regular"
            android:gravity="fill"
            android:inputType="textNoSuggestions|text"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/black"
            android:textColorHighlight="#013ADF"
            android:textColorLink="#1976D2"
            android:textSize="14sp" />

    </LinearLayout>


    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/inter_light"
        android:text="Detail Address"
        android:textColor="@color/Orange_black"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/etDetailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView12"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/text_background"
        android:fontFamily="@font/inter_regular"
        android:gravity="fill"
        android:inputType="textMultiLine|textNoSuggestions"
        android:minHeight="70dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/black"
        android:textColorHighlight="#013ADF"
        android:textColorLink="#1976D2"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/BtnAddAddress"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/etDetailAddress"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/inter_medium"
        android:gravity="center"
        android:inputType="textMultiLine"
        android:paddingStart="10dp"
        android:text="Save Address"
        android:paddingEnd="10dp"
        android:textColor="@color/white"
        android:textColorHighlight="#013ADF"
        android:textColorLink="#1976D2"
        android:textSize="14sp" />


</RelativeLayout>