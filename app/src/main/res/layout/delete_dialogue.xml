<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialogue_background"
    >


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/inter_medium"
        android:text="Remove address"
        android:textColor="@color/Orange_black"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/inter_regular"
        android:text="Are you sure,remove this address? Please note that removing this cannot be undone"
        android:textColor="@color/Orange_black"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/buy_background"
        android:layout_below="@id/textView1"
        android:layout_marginTop="30dp"/>


    <LinearLayout
        android:id="@+id/linera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear1"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/textView"
            android:layout_centerHorizontal="true"
            android:layout_weight="0.5"
            android:fontFamily="@font/inter_medium"
            android:gravity="center"
            android:text="Cancel"
            android:textColor="@color/Orange_black"
            android:textSize="16sp" />


        <LinearLayout
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/buy_background"
            android:id="@id/linear2"/>

        <TextView
            android:id="@+id/btn_delete"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="2dp"
            android:layout_weight="0.5"
            android:fontFamily="@font/inter_medium"
            android:gravity="center"
            android:text="Remove"
            android:textColor="@color/Project_blue"
            android:textSize="16sp" />


    </LinearLayout>


</RelativeLayout>