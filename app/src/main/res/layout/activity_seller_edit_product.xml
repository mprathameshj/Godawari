<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SellerAddProductActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/btnSetNewArriwal"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/text_background"
                android:gravity="center"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="Set as new"
                android:textAppearance="@style/MyBottomNavigationTextStyle"
                android:textColor="@color/Project_blue" />


            <TextView
                android:id="@+id/textView29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/inter_light"
                android:text="Product Available"
                android:textColor="@color/Orange_black"
                android:textSize="12sp" />

            <Switch
                android:id="@+id/avail_switch_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@id/textView29" />

            <TextView
                android:id="@+id/btnProductAvailable"
                android:layout_width="48dp"
                android:layout_height="25dp"
                android:layout_below="@id/textView29"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_background"
                android:gravity="center"
                android:text="Update"
                android:textAppearance="@style/MyBottomNavigationTextStyle"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textView15"
                android:layout_below="@id/btnProductAvailable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/inter_light"
                android:text="Product Name"
                android:textColor="@color/Orange_black"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/etProductName"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/textView15"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/text_background"
                android:drawablePadding="2dp"
                android:fontFamily="@font/inter_regular"
                android:inputType="text"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textColorHighlight="#013ADF"
                android:textColorLink="#1976D2"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/btnSelectRam"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_below="@id/etProductName"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/text_background"
                android:gravity="center"
                android:text="Select Ram"
                android:textAppearance="@style/MyBottomNavigationTextStyle"
                android:textColor="@color/Project_blue" />


            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnSelectRam"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/inter_light"
                android:text="RAM and ROM "
                android:textColor="@color/Orange_black"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/etRam1"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_below="@+id/textView17"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/text_background"
                android:drawablePadding="2dp"
                android:fontFamily="@font/inter_regular"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="@color/black"
                android:textColorHighlight="#013ADF"
                android:textColorLink="#1976D2"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnSelectRam"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/textView17"
                android:fontFamily="@font/inter_light"
                android:text="Selling prise "
                android:textColor="@color/Orange_black"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/etSellingPrise"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_below="@+id/textView19"
                android:layout_marginTop="5dp"
                android:layout_marginStart="30dp"
                android:layout_toRightOf="@id/textView17"
                android:background="@drawable/text_background"
                android:drawablePadding="2dp"
                android:fontFamily="@font/inter_regular"
                android:inputType="number"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textColorHighlight="#013ADF"
                android:textColorLink="#1976D2"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnSelectRam"
                android:layout_marginStart="45dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/textView19"
                android:fontFamily="@font/inter_light"
                android:text="Retail prise "
                android:textColor="@color/Orange_black"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/etRetailprice"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_below="@+id/textView20"
                android:layout_marginStart="45dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:layout_toRightOf="@id/textView19"
                android:background="@drawable/text_background"
                android:drawablePadding="2dp"
                android:fontFamily="@font/inter_regular"
                android:inputType="number"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textColorHighlight="#013ADF"
                android:textColorLink="#1976D2"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etRam1"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/inter_light"
                android:text="Ram Available"
                android:textColor="@color/Orange_black"
                android:textSize="12sp" />

            <Switch
                android:id="@+id/avail_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/etRam1"
                android:layout_marginStart="10dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@id/textView27" />


            <TextView
                android:id="@+id/btnUpdateRam"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/textView27"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/button_background"
                android:fontFamily="@font/inter_medium"
                android:gravity="center"
                android:text="Update Ram"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/white" />


            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnUpdateRam"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/inter_light"
                android:text="colour"
                android:textColor="@color/Orange_black"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/btnSelectColour"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_below="@id/textView21"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/text_background"
                android:gravity="center"
                android:text="Select colour"
                android:textAppearance="@style/MyBottomNavigationTextStyle"
                android:textColor="@color/Project_blue" />

            <TextView
                android:id="@+id/etColourRam"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_toRightOf="@id/btnSelectColour"
                android:layout_below="@+id/textView21"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/text_background"
                android:drawablePadding="2dp"
                android:fontFamily="@font/inter_regular"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="@color/black"
                android:textColorHighlight="#013ADF"
                android:textColorLink="#1976D2"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/etcolor"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_below="@+id/btnSelectColour"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/text_background"
                android:drawablePadding="2dp"
                android:fontFamily="@font/inter_regular"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="@color/black"
                android:textColorHighlight="#013ADF"
                android:textColorLink="#1976D2"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/etRAmcolour"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_below="@+id/btnSelectColour"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/etcolor"
                android:background="@drawable/text_background"
                android:fontFamily="@font/inter_regular"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="@color/black"
                android:textColorHighlight="#013ADF"
                android:textColorLink="#1976D2"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/textView28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etcolor"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/inter_light"
                android:text="Colour Available"
                android:textColor="@color/Orange_black"
                android:textSize="12sp" />

            <Switch
                android:id="@+id/avail_switch_colour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/etcolor"
                android:layout_marginStart="10dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@id/textView28" />


            <TextView
                android:id="@+id/btnUpdateColour"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/textView28"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/button_background"
                android:fontFamily="@font/inter_medium"
                android:gravity="center"
                android:text="Update colour"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/white" />



            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnUpdateColour"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/inter_light"
                android:text="DefaultPrice"
                android:textColor="@color/Orange_black"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/etDefaultPrice"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/textView14"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/text_background"
                android:drawablePadding="2dp"
                android:fontFamily="@font/inter_regular"
                android:gravity="start"
                android:inputType="number"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/black"
                android:textColorHighlight="#013ADF"
                android:textColorLink="#1976D2"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/btnUpdateDefaultPrice"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/etDefaultPrice"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/button_background"
                android:fontFamily="@font/inter_medium"
                android:gravity="center"
                android:text="Update default price"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/white" />


            <TextView
                android:id="@+id/btnDeleteProduct"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/btnUpdateDefaultPrice"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/delete_backgroung"
                android:fontFamily="@font/inter_medium"
                android:gravity="center"
                android:text="Delete Product"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/white" />



        </RelativeLayout>
    </ScrollView>

</RelativeLayout>