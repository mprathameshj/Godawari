<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@drawable/text_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/Image"
                android:layout_width="96dp"
                android:layout_height="126dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/Image"
                android:background="@drawable/transperent_textview"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/charcole" />

            <androidx.appcompat.widget.AppCompatRatingBar
                android:id="@+id/rate"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_below="@+id/name"
                android:layout_marginStart="-60dp"
                android:layout_marginTop="-10dp"
                android:layout_toRightOf="@+id/Image"
                android:numStars="5"
                android:progressTint="@color/Darkgraan"
                android:rating="4.4"
                android:scaleX="0.4"
                android:scaleY="0.4" />

            <TextView
                android:id="@+id/CutPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rate"
                android:layout_marginStart="15dp"
                android:layout_toRightOf="@+id/Image"
                android:background="@drawable/transperent_textview"
                android:fontFamily="@font/inter_medium"
                android:textColor="#6F7275"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/SellingPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rate"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@+id/CutPrice"
                android:background="@drawable/transperent_textview"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/Orange_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/Off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/CutPrice"
                android:layout_marginStart="15dp"
                android:layout_toRightOf="@id/Image"
                android:background="@drawable/transperent_textview"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/Darkgraan"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/Note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Off"
                android:layout_marginStart="15dp"
                android:layout_toRightOf="@+id/Image"
                android:background="@drawable/transperent_textview"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/Darkgraan"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/FreeDelevery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Note"
                android:layout_marginStart="15dp"
                android:layout_toRightOf="@+id/Image"
                android:background="@drawable/transperent_textview"
                android:fontFamily="@font/inter_regular"
                android:text="Free delivery"
                android:textColor="@color/Orange_black"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/Ram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Image"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bext_background_3"
                android:fontFamily="@font/inter_regular"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:textColor="@color/black2"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/Display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Ram"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bext_background_3"
                android:fontFamily="@font/inter_regular"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:textColor="@color/black2"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/Camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Display"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bext_background_3"
                android:fontFamily="@font/inter_regular"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:textColor="@color/black2"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/FrontCamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Display"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/Camera"
                android:background="@drawable/bext_background_3"
                android:fontFamily="@font/inter_regular"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:textColor="@color/black2"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/Battery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Camera"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bext_background_3"
                android:fontFamily="@font/inter_regular"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:textColor="@color/black2"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_below="@+id/Battery"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="#4DABB2B9"
                ></LinearLayout>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>