<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/Remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/State11"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/text_back_2"
                android:fontFamily="@font/inter_regular"
                android:paddingStart="5dp"
                android:paddingTop="3dp"
                android:paddingEnd="5dp"
                android:paddingBottom="3dp"
                android:text="Remove"
                android:textColor="@color/Orange_black"
                android:textSize="12sp" />



            <TextView
                android:id="@+id/Name11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/inter_medium"
                android:text="Jaybhaye Prathamesh"
                android:textColor="@color/Orange_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/DetailAddress11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Name11"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/inter_regular"
                android:paddingEnd="100dp"
                android:text="Satpute nagar,Miri road shevgaon 414502, ahemednagar maharashtra"
                android:textColor="@color/Orange_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/State11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/DetailAddress11"
                android:layout_marginStart="5dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/inter_regular"
                android:text="Maharashtra"
                android:textColor="@color/Orange_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/Pincode11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/DetailAddress11"
                android:layout_marginStart="5dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="5dp"
                android:layout_toRightOf="@id/State11"
                android:fontFamily="@font/inter_regular"
                android:text="-414502"
                android:textColor="@color/Orange_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/MobileNumber11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/State11"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/inter_regular"
                android:text="8550952160"
                android:textColor="@color/Orange_black"
                android:textSize="14sp" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>