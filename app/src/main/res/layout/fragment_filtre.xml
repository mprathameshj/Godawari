<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragments.FiltreFragment">

    <ImageView
        android:id="@+id/btn_cut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:paddingStart="3dp"
        android:paddingTop="3dp"
        android:paddingEnd="3dp"
        android:paddingBottom="3dp"
        android:src="@drawable/delete" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/btn_cut"
        android:fontFamily="@font/inter_medium"
        android:paddingStart="3dp"
        android:paddingTop="3dp"
        android:paddingEnd="3dp"
        android:paddingBottom="3dp"
        android:text="Filtre"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/btn_price"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_cut"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/buy_background"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        android:text="Price"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/btn_ram"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_price"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/buy_background"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        android:text="Ram"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/btn_battery"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_ram"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/buy_background"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:inputType=""
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        android:text="Battery"
        android:textColor="@color/black" />

    <RadioGroup
        android:id="@+id/RadioPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_cut"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_toRightOf="@id/btn_price">


        <RadioButton
            android:id="@+id/Radio1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="below \u20B910000"
            android:textColor="@color/black"
            android:theme="@style/CustomRadioButton" />


        <RadioButton
            android:id="@+id/Radio2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="\u20B910000  to  \u20B915000"
            android:textColor="@color/black"
            android:theme="@style/CustomRadioButton" />

        <RadioButton
            android:id="@+id/Radio3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="\u20B915000 to  \u20B920000"
            android:textColor="@color/black"
            android:theme="@style/CustomRadioButton" />

        <RadioButton
            android:id="@+id/Radio4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="\u20B920000  to  \u20B930000"
            android:textColor="@color/black"
            android:theme="@style/CustomRadioButton" />

        <RadioButton
            android:id="@+id/Radio5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="\u20B930000 Above"
            android:textColor="@color/black"
            android:theme="@style/CustomRadioButton" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/RadioRam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RadioPrice"
        android:layout_above="@+id/RadioPrice"
        android:layout_toRightOf="@+id/RadioPrice"
        android:layout_toLeftOf="@+id/RadioPrice"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:visibility="gone"
         >



        <RadioButton
            android:id="@+id/Ram1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="6GB | 128GB"
            android:textColor="@color/black"
            android:theme="@style/CustomRadioButton" />


        <RadioButton
            android:id="@+id/Ram2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="6GB | 256GB"
            android:textColor="@color/black"
            android:theme="@style/CustomRadioButton" />

        <RadioButton
            android:id="@+id/Ram3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="8GB | 128GB"
            android:textColor="@color/black"
            android:theme="@style/CustomRadioButton" />

        <RadioButton
            android:id="@+id/Ram4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="8GB | 256GB"
            android:textColor="@color/black"
            android:theme="@style/CustomRadioButton" />

        <RadioButton
            android:id="@+id/Ram5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="12GB | 256GB Above"
            android:textColor="@color/black"
            android:theme="@style/CustomRadioButton" />
    </RadioGroup>




    <RadioGroup
        android:id="@+id/RadioTest"
        android:layout_below="@+id/btn_cut"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_toRightOf="@id/btn_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >



        <RadioButton
            android:clickable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:theme="@style/CustomRadioButton" />


        <RadioButton
            android:clickable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:theme="@style/CustomRadioButton" />

        <RadioButton
            android:clickable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:theme="@style/CustomRadioButton" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:clickable="false"
            android:textColor="@color/black"
            android:theme="@style/CustomRadioButton" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:clickable="false"
            android:textColor="@color/black"
            android:theme="@style/CustomRadioButton" />
    </RadioGroup>



    <TextView
        android:id="@+id/btn_apply"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/RadioTest"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/Project_blue"
        android:fontFamily="@font/inter_medium"
        android:gravity="center"
        android:text="Apply"
        android:textColor="@color/white" />



    <RadioGroup
        android:id="@+id/RadioBattery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RadioPrice"
        android:layout_above="@+id/RadioPrice"
        android:layout_toRightOf="@+id/RadioPrice"
        android:layout_toLeftOf="@+id/RadioPrice"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:visibility="gone"
        >



        <RadioButton
            android:id="@+id/Battery1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="2000-3000 mah"
            android:textColor="@color/black"
            android:theme="@style/CustomRadioButton" />


        <RadioButton
            android:id="@+id/Battery2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="3000-4000 mah"
            android:textColor="@color/black"
            android:theme="@style/CustomRadioButton" />

        <RadioButton
            android:id="@+id/Battery3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="4000-5000 mah"
            android:textColor="@color/black"
            android:theme="@style/CustomRadioButton" />

        <RadioButton
            android:id="@+id/Battery4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="5000-6000 mah"
            android:textColor="@color/black"
            android:theme="@style/CustomRadioButton" />

        <RadioButton
            android:id="@+id/Battery5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="6000 mah Above"
            android:textColor="@color/black"
            android:theme="@style/CustomRadioButton" />
    </RadioGroup>



</RelativeLayout>